# AnomHome Overmind Configuration
# Copy this file to .env and fill in your values
# WARNING: Keep this file secure and NEVER commit it to version control

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# AI Configuration
# AI provider: 'openai' or 'local'
AI_PROVIDER=openai

# OpenAI Configuration (required when AI_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here

# Local AI Configuration (required when AI_PROVIDER=local)
LOCAL_MODEL_PATH=/path/to/your/local/model
MODEL_CONTEXT_SIZE=4096
LOCAL_SERVER_PORT=8080
# Admin User Bootstrap (optional - overrides defaults)
# Default username: admin, Default password: admin123
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@overmind.local

# File Browser Configuration
# Root directory for file browser (defaults to home directory)
FILE_BROWSER_ROOT=

# Upload Configuration
# Maximum file size in MB (default: 100)
MAX_UPLOAD_SIZE=100

# Security
# Set a secret key for session management
# IMPORTANT: Change this to a random, secure value in production
# Set a secret key for session management (auto-generated if not provided)
SECRET_KEY=your_secret_key_here

# CORS Configuration (optional)
CORS_ORIGIN=
